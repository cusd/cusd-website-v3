<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title><%= "#{current_page.data.title || yield_content(:title)} | Cornell University Sustainable Design" %></title>

    <%= stylesheet_link_tag "normalize", "cusd" %>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,200' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href="../images/favicon.ico" type="image/x-icon">
    <link rel="icon" href="../images/favicon.ico" type="image/x-icon">
    <script>
     (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
     (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
     m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
     })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
     ga('create', 'UA-75411627-1', 'auto');  ga('send', 'pageview');
    </script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>

    <link rel="stylesheet" href="../stylesheets/lightbox2-master/dist/css/lightbox.css">
    <script src="../stylesheets/lightbox2-master/dist/js/lightbox-plus-jquery.js"></script>






    <%= javascript_include_tag  "head" %>
  </head>

  <body class="<%= page_classes %>">

    <header class="site-header">
      
      <div class="site-header__wrapper">

        <% link_to '/index.html' do %>
          <div class="site-logo">
            <%= image_tag "CUSDLogoTypeGray.svg", class: "site-logo__image" %>
            <span class="site-logo__text">Cornell University<br>Sustainable Design</span>
          </div>
        <% end %>
        <div class="main-nav" style="padding-right: 10px">
          <ul class="main-nav__menu">
            <!--<li> 
              <a href="https://securelb.imodules.com/s/1717/alumni/index.aspx?sid=1717&gid=2&pgid=403&cid=1031&dids=142&bledit=1" target="_blank" class="button">Donate</a>
            </li> -->
            <li> 
              <a href="http://tiny.cc/joincusd" target="_blank" class="button">Join</a>
            </li>
            <li><%= link_to 'Connect', '/connect.html' %></li>
            <li><%= link_to 'Stories', '/team.html' %></li>
            <li><%= link_to 'About', '/about.html' %></li>
            <li><%= link_to 'Projects', '/projects.html' %></li>
          </ul>
        </div>

        <div class="mobile-nav" style="padding-right: 10px">
          <a href="#mobileMenu" class="button secondary" onclick="mobileMenu()">Menu</a>
        </div>

        <div class="mobile-buttons">
          <%= link_to 'Connect', '/connect.html', :class => 'mobile-button' %>
          <%= link_to 'Stories', '/stories.html', :class => 'mobile-button' %>
          <%= link_to 'About', '/about.html', :class => 'mobile-button' %>
          <%= link_to 'Projects', '/projects.html', :class => 'mobile-button' %>
        </div>

      </div>
    </header>

    <%= yield %>

    <div class="footer-cta">
    </div>
    
    <footer class="site-footer">
      <div class="site-footer__wrapper">
        <div class="site-footer__social-links">
          <ul>
            <li><a href="https://www.facebook.com/CUSustainableDesign/?fref=ts" target="_blank">Facebook</a></li>
            <li><a href="https://twitter.com/CUSD" target="_blank">Twitter</a></li>
            
          </ul>
        </div>
        <div class="site-footer__copyright">
          <span>&copy;&nbsp;2011&ndash;<%= Time.now.year %> Cornell University Sustainable Design</span>
        </div>
      </div>
    </footer>
    <%= javascript_include_tag  "cusd" %>
  </body>
</html>
